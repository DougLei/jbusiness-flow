{
	"name": "ShoppingSettleAccounts",
	"description": "购物结账",
	"version": "1",
	"enabled": true,

	"params": [{
		"name": "shoppingCarId",
		"description": "购物车id",
		"scope": 1,
		"dataType": "string",
		"required": true
	}],

	"events": [{
		"type": 1,
		"name": "getProductsByShoppingCarId",
		"description": "根据购物车id查询到对应的商品",
		"actions": [{
				"type": "func_method",
				"content":{
					"methodName":"queryProductsByShoppingCarId",
					"params":[{
						"name":"shoppingCarId",
						"scope":1
					}],
					
					"receives":[{
						"returnName":"products",
						"scope":4
					}]
				}
			},{
				"type": "param_op_declare",
				"content": [{
					"name": "totalPrice",
					"description": "商品总价",
					"scope": 3,
					"dataType": "double"
			}]
		}]
	}, {
		"name": "XiShuLeiProductCalcPrice",
		"description": "如果洗漱类用品的总价超过200元(包括200元)，则打8折",
		"actions": [{
			"type": "param_op_declare",
			"content": [{
				"name": "XiShuLeiProductTotalPrice",
				"description": "洗漱类产品总价",
				"scope": 5,
				"dataType": "double"
			}]
		}, {
			"type": "func_loop",
			"content": {
				"name": "products",
				"scope": 4,
				"alias": {
					"name":"product",
					"dataType":"object"
				},
				"actions": [{
					"type": "func_switch",
					"content": [{
						"conditionGroups": [{
							"conditions": [{
								"content": {
									"op": "eq",
									"left": {
										"name": "product.PRODUCT_TYPE",
										"scope": 5
									},
									"right": {
										"value": 2
									}
								}
							}]
						}],
						"actions": [{
							"type": "data_op_arithmetic",
							"content": [{
								"name": "XiShuLeiProductTotalPrice",
								"scope": 5,
								"op": "add"
							}, {
								"name": "product.PRODUCT_PRICE",
								"scope": 5,
								"op":"mul"
							},{
								"name": "product.PRODUCT_COUNT",
								"scope": 5
							}],
							"result": {
								"name": "XiShuLeiProductTotalPrice",
								"scope": 5,
								"dataType": "double"
							}
						}]
					}]
				}]
			}
		},{
			"type": "func_switch",
			"content": [{
				"conditionGroups": [{
					"conditions": [{
						"content": {
							"op": "ge",
							"left": {
								"name": "XiShuLeiProductTotalPrice",
								"scope": 5
							},
							"right": {
								"value": 200
							}
						}
					}]
				}],
				"actions": [{
					"type": "data_op_arithmetic",
					"content": [{
						"name": "XiShuLeiProductTotalPrice",
						"scope": 5,
						"op":"mul"
					},{
						"value": 0.8
					}],
					"result": {
						"name": "XiShuLeiProductTotalPrice",
						"scope": 5
					}
				}]
			}]
		},{
			"type": "data_op_arithmetic",
			"content": [{
				"name": "totalPrice",
				"scope": 3,
				"op":"add"
			},{
				"name": "XiShuLeiProductTotalPrice",
				"scope": 5
			}],
			"result": {
				"name": "totalPrice",
				"scope": 3
			}
		},{
			"type": "param_op_declare",
			"content": [{
				"name": "test",
				"description":"测试声明参数, 并将指定范围的某个参数值赋给当前参数",
				"scope": 3,
				"dataType": "double",
				"refParamName":"XiShuLeiProductTotalPrice",
				"refParamScope":5
			}]
		}]
	}],
	
	"flows":[{
		"sourceEvent":"getProductsByShoppingCarId",
		"targetEvent":"XiShuLeiProductCalcPrice"
	}],

	"sqls": [{
		"type": "select",
		"name": "queryProductsByShoppingCarId",
		"params": [{
			"name": "shoppingCarId",
			"description": "购物车id",
			"scope": 5,
			"dataType": "string",
			"required": true
		}],
		"content": {
			"selects": [{
				"results": [{
					"column": "product_name"
				}, {
					"column": "product_type"
				}, {
					"column": "product_price"
				}, {
					"column": "product_count"
				}],
				"table": {
					"name": "shopping_car"
				},
				"whereGroups": [{
					"conditions": [{
						"left": {
							"column": "shopping_car_id"
						},
						"rights": [{
							"paramName": "shoppingCarId"
						}],
						"cop": "eq"
					}]
				}]
			}]
		}
	}],
	
	"methods":[{
		"name":"queryProductsByShoppingCarId",
		"params":[{ 
			"name":"shoppingCarId", 
			"scope":5,
			"dataType":"string",
			"required":true
		}],
		"actions":[{
			"type": "sql_op",
			"content": {
				"name": "queryProductsByShoppingCarId",
				"params": [{
					"name": "shoppingCarId",
					"scope": 1
				}]
			},
			"result": {
				"name": "products",
				"scope": 5,
				"dataType": "list"
			}
		}], 
		"return":{
			"all":true
		}
	}]
}